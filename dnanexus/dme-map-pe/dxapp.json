{
  "name": "dme-map-pe",
  "title": "map pe reads with bismark (v2.0.0)",
  "summary": "WGBS ENCODE Pipeline step: Trim and map paired end reads for technical replicate using Bismark",
  "dxapi": "1.0.0",
  "version": "2.0.0",
  "categories": [
    "DNA Methylation"
  ],
  "inputSpec": [
    {
      "name": "reads1",
      "label": "Read1 of paired-end fastq file(s) (gzipped)",
      "class": "array:file",
      "optional": false,
      "patterns": ["*.fq.gz","*.fastq.gz"]
    },
    {
      "name": "reads2",
      "label": "Read2 of paired-end fastq files (gzipped)",
      "class": "array:file",
      "optional": false,
      "patterns": ["*.fq.gz","*.fastq.gz"]
    },
    {
      "name": "dme_ix",
      "label": "A directory of converted genome files (C->T, G->A)",
      "class": "file",
      "optional": false,
      "patterns": ["*.tgz"]
    },
    {
      "name": "min_insert",
      "label": "Minimum insert size",
      "class": "int",
      "optional": true,
      "default": 0
    },
    {
      "name": "max_insert",
      "label": "Maximum insert size",
      "class": "int",
      "optional": true,
      "default": 500
    },
    {
      "name": "nthreads",
      "label": "Number of threads to use",
      "class": "int",
      "optional": true,
      "default": 8
    }
  ],
  "outputSpec": [
    {
      "name": "bam_techrep",
      "label": "mapped bismark outputs",
      "class": "file",
      "patterns": ["*_bismark_techrep.bam"]
    },
    {
      "name": "bam_techrep_qc",
      "label": "Text file with samtools flagstat/stats results",
      "class": "file",
      "patterns": ["*_bismark_techrep_qc.txt"]
    },
    {
      "name": "map_techrep",
      "label": "Mapping QC report",
      "class": "file",
      "patterns": ["*_bismark_techrep_map_report.txt"]
    },
    {
      "name": "reads",
      "label": "Count of reads in the techrep bam",
      "optional": true,
      "class": "string"
    },
    {
      "name": "metadata",
      "label": "JSON formatted string of metadata",
      "class": "string"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/dme-map-pe.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x8"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x8"
      }
    }
  },
  "authorizedUsers": []
}

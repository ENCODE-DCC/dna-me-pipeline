{
  "name": "dme-map-se",
  "title": "map se reads with bismark (v2.0.0)",
  "summary": "WGBS ENCODE Pipeline step: Mapping single ended reads using Bismark",
  "dxapi": "1.0.0",
  "version": "2.0.0",
  "categories": [
    "DNA Methylation"
  ],
  "inputSpec": [
    {
      "name": "trimmed_reads",
      "label": "Prepared Reads",
      "class": "file",
      "optional": false,
      "patterns": ["*_reads_trimmed.fq.gz"]
    },
    {
      "name": "dme_ix",
      "label": "A directory of converted genome files (C->T, G->A)",
      "class": "file",
      "optional": false,
      "patterns": ["*.tgz"]
    },
    {
      "name": "nthreads",
      "label": "Number of threads to use",
      "class": "int",
      "optional": true,
      "default": 8
    }
  ],
  "outputSpec": [
    {
      "name": "bismark_bam",
      "label": "mapped bismark outputs",
      "class": "file",
      "patterns": ["*bismark.bam"]
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/dme-map-se.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x4"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x4"
      }
    }
  },
  "authorizedUsers": []
}

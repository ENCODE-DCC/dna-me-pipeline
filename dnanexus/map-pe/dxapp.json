{
  "name": "map-pe",
  "title": "WGBS-bismark-map-pe",
  "summary": "WGBS ENCODE Pipeline step: Mapping paired ended reads using Bismark",
  "dxapi": "1.0.0",
  "version": "1.0.1",
  "categories": [
    "DNA Methylation"
  ],
  "inputSpec": [
    {
      "name": "meIndex",
      "label": "A directory of converted genome files (C->T, G->A)",
      "class": "file",
      "optional": false,
      "patterns": ["*.tgz"]
      },
    {
      "name": "pair_1",
      "label": "Prepared Reads for Pair 1",
      "class": "file",
      "optional": false,
      "patterns": ["*.gz"]
    },
    {
      "name": "pair_2",
      "label": "Prepared Reads for Pair 2",
      "class": "file",
      "optional": false,
      "patterns": ["*.gz"]
    },
    {
      "name": "genome",
      "label": "A genome",
      "class": "file",
      "optional": false,
      "patterns": ["*.gz"]
      },
    {
      "name": "min_insert",
      "label": "Minimum insert size",
      "class": "int",
      "optional": true,
      "default": 0
    },
    {
      "name": "max_insert",
      "label": "Maximum insert size",
      "class": "int",
      "optional": true,
      "default": 500
    }
  ],
  "outputSpec": [
    {
      "name": "mapped_files",
      "label": "tgz file of mapped bismark outputs",
      "class": "file"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/map.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x8"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x8"
      }
    }
  },
  "authorizedUsers": []
}
